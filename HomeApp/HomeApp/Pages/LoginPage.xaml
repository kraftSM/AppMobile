<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HomeApp.Pages"
             x:Class="HomeApp.Pages.LoginPage">
    
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="HomeApp - Ваш умный дом" FontSize="Title" Padding="30,10,30,10" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Entry IsPassword="True" x:Name="Password" MaxLength="4"    Placeholder="PIN"            TextChanged="Password_TextChanged"/>
        <Button x:Name="loginButton" Text="{x:Static local:LoginPage.BUTTON_TEXT}" Clicked="Login_Click" />
        <Label x:Name="lgMessage" FontSize="Small" TextColor="Red" Padding="30,10,30,10" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
    </StackLayout>
</ContentPage>